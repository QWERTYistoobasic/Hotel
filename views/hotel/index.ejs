<% layout("/layout/boilerplate") %>
    <h1>Hotel Registration </h1>
<% for (let h of hotel){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=h.images[0].url%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= h.title %> </h5>
                    <p class="card-text"><%= h.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= h.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/hotel/<%=h._id%>">View <%=h.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
